<Window x:Class="MailSender.WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MailSender.WPFTest"
        Height="450" Width="800">
    <Window.DataContext>
        <l:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Content="Start" Click="OnStartButtonClick"
                HorizontalAlignment="Left"
                Margin="125,75,0,0" 
                VerticalAlignment="Top" Width="75"/>
        <TextBlock Name="ResultText" HorizontalAlignment="Left"
                   Margin="145,40,0,0"
                   TextWrapping="Wrap" 
                   Text="Результат будет здесь." 
                   VerticalAlignment="Top"/>
        <ProgressBar Name="ProgressInformer" HorizontalAlignment="Left" 
                     Height="20" 
                     Margin="125,120,0,0"
                     VerticalAlignment="Top" 
                     Width="250"/>
        <Button Content="Cancel" Click="OnCancelButtonClick"
                HorizontalAlignment="Left"
                Margin="300,75,0,0" 
                VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
